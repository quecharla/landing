{% macro render(edicion) -%}
<section class="centered speakers">
  {% for speaker in edicion.charlantes %}
    {% if speaker %}
    <div class="speaker">
      <a class="speaker__image" href="https://twitter.com/{{speaker.twitter}}" target="_blank">
        <img src="{{speaker.avatar}}" alt="{{ speaker.nombre }}">
      </a>
      <div class="speaker__description-talk">
        <h2 class="speaker__title">
          {{ speaker.titulo }}
          {% if speaker.slides %}
            <a href="{{ speaker.slides }}" class="icon-slides" target="_blank"></a>
          {% endif %}
          {% if speaker.repo %}
            <a href="{{ speaker.repo }}" class="icon-github" target="_blank"></a>
          {% endif %}
        </h2>
        <a class="speaker__speaker-name" href="https://twitter.com/{{speaker.twitter}}" target="_blank">
          {{ speaker.nombre }}
        </a>
        <p class="speaker__description">{{ speaker.subtitulo }}</p>
      </div>
    </div>
    {% else %}
      <div class="speaker">
        <div class="speaker__image">
        </div>
        <div class="speaker__description-talk">
          <div class="block speaker__title--placeholder"></div>
          <div class="block speaker__speaker-name--placeholder"></div>
          <div class="block speaker__description--placeholder"></div>
        </div>
      </div>
    {% endif %}
  {% endfor %}
</section>
{%- endmacro %}